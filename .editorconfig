# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.{css,html,js,py}]
charset = utf-8
max_line_length = 120

[*.py]
indent_style = space
indent_size = 4

[*.{css,html,js}]
indent_style = space
indent_size = 2

